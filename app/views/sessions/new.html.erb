<div class="flex column align-center">

<h1>Login</h1>

<%= form_tag '/login' do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Submit" %>

<% end %>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %>

</div>